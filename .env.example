# Telepath Bot Configuration
# Copy this file to .env and fill in your actual values

# Telegram Bot Token
# Get this from @BotFather on Telegram
# Example: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
BOT_TOKEN=your_telegram_bot_token_here

# Dub.sh API Key
# Get this from https://dub.sh/settings/tokens
# Example: dub_xyz123abc456def789
DUB_API_KEY=your_dub_api_key_here

# Google Gemini API Key
# Get this from https://aistudio.google.com/app/apikey
# Example: AIzaSyABC123def456GHI789jkl
GEMINI_API_KEY=your_gemini_api_key_here

# Environment (optional)
# Use 'development' for local testing, 'production' for live deployment
NODE_ENV=development

# Allowed User IDs (optional)
# Comma-separated list of Telegram user IDs that can use the bot
# If not set, the bot will be accessible to all users
# Example: 123456789,987654321,555666777
ALLOWED_USER_IDS=your_telegram_user_id_here